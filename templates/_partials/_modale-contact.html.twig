{% extends 'base.html.twig' %}
{% block body %}

	<div class="modal" id="modale-contact">
		<div class="modal-header">
			<h1 class="titre-principal">Contacter un service</h1>
		</div>
		<div class="divider"></div>

	</div>
	{{form_start(form)}}
	<div class="modal-content">
		<form class="form contact-services">
			{{ form_row(form.service) }}
			{{form_row(form.subject)}}
			{{form_row(form.email)}}
			{{form_row(form.message)}}

		</div>
		<div class="divider"></div>
		<div class="modal-footer">
			<button class="btn btn-primary btn-centered">Envoyer</button>
			<button class="btn btn-secondary btn-right modal-trigger" data-target="modale-contact">Fermer</button>
		</div>
	</form>
		{{form_end(form)}}
{% endblock %}

