<div class="modal" id="modale-contact">
	<div class="modal-header">Contacter</div>
	<div class="divider"></div>
	{{form_start(form)}}
</div>
<div class="modal-content"></div>
{{form_row(form.subject)}}
{{form_row(form.email)}}
{{form_row(form.message)}}
<div class="divider"></div>
<div class="modal-footer"></div>
<button class="btn btn-primary">Envoyer</button>
<button class="btn btn-secondary modal-trigger" data-target="modale-contact">Fermer</button>
{{form_end(form)}}

