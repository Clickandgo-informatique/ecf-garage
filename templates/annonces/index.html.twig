{% extends "base.html.twig" %}
{% block title %}Liste des annonces
{% endblock %}
{% block body %}
	<div class="main">
<h1 class="titre-principal">Liste des annonces</h1>

		<div class="cards-container">
			{% for v in annonces %}
				<div class="card-vehicule">
					<div class="photo-miniature">
						{% if v.photos[0] is defined %}
							{{v.photos[0]}}
						{% endif %}
					</div>
					<div class="card-title">
						<p>
							<strong>{{v.marque}}</strong>
							{{v.modele}}</p>
					</div>
					<div class="card-text">
						<p>{{v.kilometrage}}
							km.</p>
						<p>{{v.prixvente}}
							€</p>
						<p>{{v.datemiseencirculation|date("d-m-Y")}}</p>
						<a class="btn btn-primary btn-voir-details" href="{{path('app_vehicules_details_vehicule',{id:v.id})}}">Voir détails</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
