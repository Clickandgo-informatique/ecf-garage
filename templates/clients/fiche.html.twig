{% extends "base.html.twig" %}
{% block title %}Fiche client
{% endblock %}
{% block body %}
	<div class="main">
		<h1 class="titre-principal">Fiche Client</h1>
		<a href="{{path('app_clients_liste_clients')}}" class="go-back-link">Revenir à la liste</a>

		<div class="card-container">
			<div class="card-title">
				<p>
					<strong>{{client.nom}}
						{{client.prenom}}</strong>
				</p>
			</div>
			<div class="card-body">
				<div class="card-text">
					<table>
						<tr>
							<td>
								<p>E-mail :</p>
							</td>
							<td>
								<p>
									<a href="#">{{client.email}}</a>
								</p>
							</td>
						</tr>
						<tr>
							<td>
								<p>Adresse :
								</p>
							</td>
							<td>
								<p>{{client.adresse}}</p>
							</td>
						</tr>
						<tr>
							<td>Code postal :
							</td>
							<td>
								<p>{{client.codepostal}}</p>
							</td>
						</tr>
						<tr>
							<td>Ville :
							</td>
							<td>
								<p>{{client.ville}}</p>
							</td>
						</tr>
						<tr>
							<td>Fixe :
							</td>
							<td>
								<p>{{client.telephonefixe}}</p>
							</td>
						</tr>
						<tr>
							<td>Mobile :
							</td>
							<td>
								<p>{{client.telephonemobile}}</p>
							</td>
						</tr>
					</table>
					<table>
						<th>Véhicules</th>
						{% if client.vehicule %}
							<tbody>

								{% for vehicule in client.vehicule %}
									<p>{{vehicule.marque}}
										{{vehicule.modele}}
										{{vehicule.immatriculation}}</p>

								{% endfor %}
							{% else %}
								<p>Aucun véhicule enregistré en concession / garage</p>
							{% endif %}
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
