<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Bienvenue !
			{% endblock %}
		</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href={{asset('./assets/css/styles.css')}}>
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
		{% endblock %}

	</head>
	<body>
		{#Header#}
		{{render(controller('App\\Controller\\HeaderController::header'))}}
		{# navbar #}

		{{ include('_partials/_nav.html.twig') }}
		{# Messages d'alerte #}
		{{ include('_partials/_flash.html.twig') }}

		{% block body %}{% endblock %}
		{# footer #}
		{{ include('_partials/_footer.html.twig') }}
		{# cookies #}
		{{ include('_partials/_cookies.html.twig') }}
		{{ include("_partials/_modal.html.twig") }}


		{% block javascripts %}
			{# <script type="text/javascript" src="{{asset('assets/js/cookies.js')}}" defer></script> #}
			<script type="text/javascript" src="{{asset('assets/js/main.js')}}" defer></script>
		{% endblock %}
	</body>

</html>
